---
// ThemeToggle组件 - 提供深浅色模式切换功能
---

<button 
  id="theme-toggle" 
  class="theme-toggle"
  aria-label="切换深色/浅色模式"
>
  <svg class="light-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <circle cx="12" cy="12" r="5"/>
    <line x1="12" y1="1" x2="12" y2="3"/>
    <line x1="12" y1="21" x2="12" y2="23"/>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
    <line x1="1" y1="12" x2="3" y2="12"/>
    <line x1="21" y1="12" x2="23" y2="12"/>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
  </svg>
  <svg class="dark-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
  </svg>
</button>

<style>
  .theme-toggle {
    background: none;
    border: none;
    color: currentColor;
    cursor: pointer;
    padding: 0.5em;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }
  
  .theme-toggle:hover {
    background-color: rgba(var(--gray-light), 0.5);
  }
  
  .theme-toggle svg {
    position: absolute;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
  
  .light-icon {
    opacity: 0;
    transform: scale(0.8);
  }
  
  .dark-icon {
    opacity: 1;
    transform: scale(1);
  }
  
  html.dark .light-icon {
    opacity: 1;
    transform: scale(1);
  }
  
  html.dark .dark-icon {
    opacity: 0;
    transform: scale(0.8);
  }
</style>

<script is:inline>
  // 主题切换逻辑
  const htmlElement = document.documentElement;
  const themeToggle = document.getElementById('theme-toggle');
  const STORAGE_KEY = 'theme';
  
  // 初始化主题（基于用户偏好或保存的设置）
  function initTheme() {
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const savedTheme = localStorage.getItem(STORAGE_KEY);
    
    // 优先级：保存的主题设置 > 浏览器偏好
    if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
      htmlElement.classList.add('dark');
    } else {
      htmlElement.classList.remove('dark');
    }
  }
  
  // 切换主题并保存到localStorage
  function toggleTheme() {
    const isDark = htmlElement.classList.toggle('dark');
    // 保存当前主题状态到localStorage
    localStorage.setItem(STORAGE_KEY, isDark ? 'dark' : 'light');
  }
  
  // 添加事件监听器
  if (themeToggle) {
    themeToggle.addEventListener('click', toggleTheme);
  }
  
  // 监听系统主题变化，当没有用户明确设置时更新
  const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
  mediaQuery.addEventListener('change', (e) => {
    const savedTheme = localStorage.getItem(STORAGE_KEY);
    // 只有当用户没有明确设置时才根据系统设置更新
    if (!savedTheme) {
      if (e.matches) {
        htmlElement.classList.add('dark');
      } else {
        htmlElement.classList.remove('dark');
      }
    }
  });
  
  // 初始化
  initTheme();
</script>